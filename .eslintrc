{
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:promise/recommended",
    "standard"
  ],
  "env": {
    "mocha": true
  },
  "plugins": [
    "mocha",
    "node"
  ],
  "globals": {
    "expect": true
  },
  "overrides": [
    {
      "files": "*.spec.js",
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ],
  "rules": {
    "array-bracket-spacing": "error",
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "curly": [
      2,
      "all"
    ],
    "eol-last": "error",
    "generator-star-spacing": "off",
    "mocha/no-exclusive-tests": "error",
    "no-console": "error",
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": true
      }
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "yield-star-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ]
  }
}
